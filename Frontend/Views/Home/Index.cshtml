@{
    ViewData["Title"] = "Home";
    ViewData["Description"] = "Welcome to Acme Corporation, the place where awesome products and dreams are created!";
}

<div class="container mt-5">
    <div class="text-center">
        <h1 class="display-4">Welcome to Acme Corporation</h1>
        <p class="lead">@ViewData["Description"]</p>
        <div class="mt-4">
            <a class="btn btn-primary btn-lg mx-2" asp-controller="Draw" asp-action="EnterDraw">Enter Draw</a>
            <a class="btn btn-secondary btn-lg mx-2" asp-controller="Draw" asp-action="ListDraws">List Draws</a>
        </div>
    </div>
</div>